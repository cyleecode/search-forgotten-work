{
  "name": "mycheatsheet",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/ && copyfiles .env.ref dist/ && npm run rename",
    "rename": "node -e \"require('fs').rename('dist/.env.ref','dist/.env', (err) => { (err? console.log(err) : console.log('Rename complete!') ) } )\"",
    "build": "rimraf ./dist && tsc && npm run copy-files",
    "start": "npm run build && npm run copy-files && node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.10",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3"
  }
}
